---
// Component Imports
import Layout from '../layouts/main.astro'
import { Icon } from 'astro-icon/components'
---

<Layout title="Fairways Capital">
  <div class="h-full flex flex-col">
    <div
      class="bg-slate-500 flex-1 bg-no-repeat bg-cover bg-[center_60%] bg-[url('/assets/hero.webp')]"
    >
    </div>

    <div class="w-full">
      <div class="gold-clip h-6"></div>

      <div class="container mx-auto px-4 pt-24 pb-28 bg-white">
        <div class="mb-10 max-w-[740px] mx-auto text-center">
          <h1
            class="text-4xl font-bold text-center mb-8 text-slate-800 inline-block mx-auto font-serif"
          >
            Fairways Capital
          </h1>
          <p class="text-center">
            Fairways Capital is a private equity firm that invests in and
            operates businesses in the lower middle market. We are a team of
            experienced operators and investors who are passionate about helping
            businesses grow and succeed.
          </p>
        </div>

        <div class="">
          <a
            href="
				  mailto:fairwayscapital@gmail.com"
            class="text-inherit flex items-center justify-center text-xl group"
          >
            <div
              class="flex items-center justify-center rounded-full border-2 text-slate-700 border-slate-700 group-hover:border-yellow-600 transition-colors group-hover:text-yellow-600 h-8 w-8 mr-2"
            >
              <Icon name="mdi:email" class="icon" />
            </div>
            <span
              class="group-hover:group-hover:text-yellow-600 transition-colors text-slate-700"
              >fairwayscapital@gmail.com</span
            ></a
          >
        </div>
      </div>
      <div class="gold h-1"></div>
    </div>
  </div>
</Layout>

<style>
  .gold {
    background-image: linear-gradient(
      to right,
      #ca8a04,
      #ca8a04,
      #fde68a,
      #ca8a04,
      #ca8a04,
      #ca8a04,
      #fcd34d,
      #ca8a04
    );
    -webkit-background-clip: content-box;
    -webkit-text-fill-color: transparent;
    -moz-background-clip: text;
    -moz-text-fill-color: transparent;
  }

  .gold-clip {
    background-image: linear-gradient(
      to right,
      #ca8a04,
      #fde68a,
      #ca8a04,
      #fcd34d,
      #ca8a04
    );
    -webkit-background-clip: content-box;
    -webkit-text-fill-color: transparent;
    -moz-background-clip: text;
    -moz-text-fill-color: transparent;
    clip-path: polygon(
      0 0,
      0 4px,
      calc(50% - 10px) 4px,
      50% 100%,
      calc(50% + 10px) 4px,
      100% 4px,
      100% 0
    );
  }
</style>
